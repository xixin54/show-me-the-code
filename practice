# filename verfcode.py
# coding:utf-8

import string
import random

--version 1
def Verification_code(number,length):
  code = []
  #j = ''
  while len(code) < number:
    scope = string.letters+string.digits
    j = ''
    for i in range(length):
      j += random.choice(scope)
    code.append(j)
  return code
  
print Verification_code(200,10)
  


